data Norm = Legge | DecretoLegislativo

data Reference = { norm :: Norm, serial :: Int, year :: Int }

f "decreto legislativo n. 97 del 2016"
:decreto.legislativo:2016;97

f "legge 7 agosto 2015, n. 124"
:legge:2015-08-07;124

f "legge n.241/1990"
:legge:1990;241

